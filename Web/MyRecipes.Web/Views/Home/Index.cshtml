@using MyRecipes.Common
@using MyRecipes.Web.ViewModels.Home
@model IndexViewModel

@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center row">
    <div class="col-md-7">
        <div class="row">
            @foreach (var recipe in this.Model.RandomRecipes)
            {
                <div class="card" style="width: 18rem;">
                    <img src="@recipe.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text">@recipe.CategoryName</p>
                        <a asp-controller="Recipe" asp-action="ById" asp-route-id="@recipe.Id" class="btn btn-primary">Към рецептата</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-5">
        <partial name="_SiteInfoPartialView" />
    </div>

</div>


