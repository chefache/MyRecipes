@model MyRecipes.Web.ViewModels.Recipes.RecipesListViewModel
@{
    this.ViewData["Title"] = "Всички рецепти, страница: " + Model.PageNumber;
}

<h1>@this.ViewData["Title"]</h1>

<hr />

<div class="row">
    @foreach (var recipe in Model.Recipes)
    {
        <div class="card" style="width: 20rem;">
            <img src="@recipe.ImageUrl" class="card-img-bottom" width="100" height="220" alt="...">
            <div class="card-body">
                <h5 class="card-title">@recipe.Name</h5>
                <p class="card-text">@recipe.CategoryName</p>
                <a href="#" class="btn btn-primary">Към рецептата</a>
            </div>
        </div>



        @*<div class="media col-md-3">
                <div class="flex-shrink-0">
                    <img src="@recipe.ImageUrl" alt="...">
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="mt-0">@recipe.Name</h5>
                    @recipe.CategoryName
                </div>
            </div>*@
    }
</div>

<hr />

<partial name="_PagingPartial" model="@Model"/>


