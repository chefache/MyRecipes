@model MyRecipes.Web.ViewModels.Recipes.RecipesListViewModel
@{
    this.ViewData["Title"] = "Всички рецепти, страница: " + Model.PageNumber;
}

<h1>@this.ViewData["Title"]</h1>

<hr />

<div class="row card-group card-header-pills">
    @foreach (var recipe in Model.Recipes)
    {
        <div class="card" style="width: 20rem;">
            <img src="@recipe.ImageUrl" class="card-img-bottom" width="100" height="220" alt="...">
            <div class="card-body">
                <h5 class="card-title">@recipe.Name</h5>
                <p class="card-text">@recipe.CategoryName</p>
                <a asp-action="ById" asp-route-id="@recipe.Id" class="btn btn-primary">Към рецептата</a>
            </div>
        </div>
    }
</div>

<hr />

<partial name="_PagingPartial" model="@Model"/>


