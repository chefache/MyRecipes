@using MyRecipes.Web.ViewModels.Recipes
@model CreateRecipeInputModel


@{
    this.ViewData["Title"] = "Create";
}

<div class="col-md-6 offset-md-3">

    <h1> Създай нова рецепта </h1>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@Model.CategoriesItems"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div id="IngredientsContainer">
            <label asp-for="Ingredients"></label>
            <a class="btn btn-info" onclick="AddMoreIngredients()">Добави</a>
        </div>
        <div class="form-group">
            <label asp-for="Instructions"></label>
            <textarea asp-for="Instructions" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Instructions" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Images"></label>
            <input asp-for="Images" class="form-control" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PreparationTime"></label>
            <input asp-for="PreparationTime" class="form-control" />
            <span asp-validation-for="PreparationTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Complicity "></label>
            <select asp-for="Complicity" class="form-control" asp-items="@Html.GetEnumSelectList
                <MyRecipes.Data.Models.Enums.Complicity>()">
            </select>
            <span asp-validation-for="Complicity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PortionsCount"></label>
            <input asp-for="PortionsCount" class="form-control" />
            <span asp-validation-for="PortionsCount" class="text-danger"></span>
        </div>

        <br />

        <input type="submit" class="btn btn-info" />
    </form>
</div>

@section Scripts{ 
<script>
    var ingredientIndex = 0;
    function AddMoreIngredients() {
        $("#IngredientsContainer").
            append("<div class='form-control'>Име: <input type='text' name='Ingredients[" + ingredientIndex + "].IngredientName' />Количество: <input type='text' name='Ingredients[" + ingredientIndex + "].IngredientQuantity' /></div>");
        ingredientIndex++;
    }
</script>
}