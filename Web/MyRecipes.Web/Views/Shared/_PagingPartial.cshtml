@model MyRecipes.Web.ViewModels.PagingViewModel
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text>} ">
            <a class="page-link" asp-action="All" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>

        @if (Model.PageNumber - Model.PreviousPageNumber != Model.PageNumber)
        {
            <li class="page-item"><a class="page-link" href="#">@Model.PreviousPageNumber</a></li>
        }

        <li class="page-item active" aria-current="page">
            <span class="page-link">@Model.PageNumber</span>
        </li>

        <li class="page-item"><a class="page-link" href="#">@Model.NextPageNumber</a></li>

        <li class="page-item @if(!Model.HasNextPage){<text>disabled</text>} ">
            <a class="page-link" asp-action="All" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>